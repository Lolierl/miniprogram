.bubble {
  height: 90rpx;
  background-color: #f0e6ed;
  border-radius: 100rpx;
  margin-top: 340rpx;
  position: absolute;
  bottom: 270rpx; /* 调整气泡到底部 */
  opacity: 0; /* 初始状态不显示 */
  animation: bubble-float 4s forwards; /* 动画名称和持续时间 */
  padding: 10px; /* 内部填充 */
  display: flex; /* 启用 Flexbox 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  flex-wrap: wrap; /* 允许换行 */
}

@keyframes bubble-float {
  0% {
    transform: translateY(0) scale(0.5);
    opacity: 1;
  }
  100% {
    transform: translateY(-400rpx) scale(1); /* 气泡上升并放大 */
    opacity: 0; /* 结束时透明 */
  }
}

.bubbles-container {
  position: relative;
  width: 100%;
  height: 0rpx; /* 根据实际需要调整 */
  
}

#bubbleButton {
  position: relative; /* 确保按钮可以相对于气泡定位 */
}

