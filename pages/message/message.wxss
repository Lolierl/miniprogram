/* pages/message/message.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 1000;
}

.back-icon {
  width: 100%;
  height: 100%;
}
/* 顶部昵称栏 */
.header {
  background-color: #f8f8f8;
  padding: 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1px solid #e5e5e5;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx;
  background-color: #ffffff;
}

/* 消息气泡样式 */
.message-item {
  max-width: 70%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.sent {
  background-color: #d2f8d2;
  align-self: flex-end;
}

.received {
  background-color: #f1f0f0;
  align-self: flex-start;
}

/* 底部输入框和发送按钮 */
.footer {
  display: flex;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
}

.input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  border: 1px solid #d9d9d9;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.send-button {
  width: 150rpx;
  height: 80rpx;
  background-color: #3cc51f;
  color: #ffffff;
  font-size: 40rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}