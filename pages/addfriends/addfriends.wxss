/* pages/addfriends/addfriends.wxss */

.back{
  position: fixed;
  bottom: 100rpx;
  color: #c6e173;
  margin-left: 320rpx;
  font-size: 50rpx;
  font-weight: 550;
}

.search-wrap1{
  display: flex;
  flex-direction: row;
  border: 3px solid #c6e173;
  border-radius: 50rpx;
  width: 630rpx;
  height: 80rpx;
  align-items: center;
  margin: 200rpx 0 0 47rpx;
  
}

.search-img{
  width: 90rpx;
  height: 90rpx;
  margin-top: 8rpx;
  margin-right: -4rpx;
}

input{
  margin-left: 40rpx;
  margin-right: 0rpx;
  width: 100%;
}

.icon-search{
  margin-left: 20rpx;
}

.friend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 160rpx;
  background-color: white;
}
.friend-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 好友头像样式 */
.friend-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 150rpx;
  margin-bottom: 15rpx;
}

/* 好友昵称样式 */
.friend-name {
  font-size:40rpx;
  color: grey;
}

.add-but{
  margin-top: 30rpx;
  color: white;
  background-color: #c6e173;
}