.wrap1 {
  height: 150rpx;
  background-color:#ecd6eb; 
}

.cover {
  width: 100%;
  height: 120rpx;
  margin-bottom: -40rpx;
}
.red-dot {
  width: 10px;
  height: 10px;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 10px;
  right: 10px;
}
.title {
  display: flex;
  font-size: 42rpx;
  font-weight: 650;
  margin-top: 97rpx;
  margin-left: 277rpx;
  color: white;
}


.chat-list {
  display: flex;
  flex-direction: column;
}

.chat-item {
  display: flex;
  margin-left: 5rpx;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 30rpx;
  font-weight: 550;
  color: #333;
}

.last-message {
  font-size: 22rpx;
  color: #999;
}

.time {
  font-size: 18rpx;
  color: #ccc;
}

.message-list {
  flex: 1;
  height: 100%;
  overflow: scroll;
}